@model IEnumerable<MissionApi.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}
<style>
    body {
        background-color: goldenrod;
    }

    .card {
        border-radius: 0px 0px 14px 14px;
        background: #fff;
        box-shadow: 0 6px 10px rgba(0,0,0,.08), 0 0 6px rgba(0,0,0,.05);
        transition: .3s transform cubic-bezier(.155,1.105,.295,1.12),.3s box-shadow,.3s -webkit-transform cubic-bezier(.155,1.105,.295,1.12);
        cursor: pointer;
    }
    .image{
        position:relative;
        display:inline;
    }
    .image img{
        display:block;
    }
    .image i {
        position: absolute;            
        top: 10px;
        right: 15px;
    }
    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 20px rgba(0,0,0,.12), 0 4px 8px rgba(0,0,0,.06);
    }
</style>
<div class="text-center">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-sm" style="padding:10px">
                <div class="card" style="width: 18rem;">
                    <div class="image">
                        <img class="card-img-top" src="@item.imageUrl" height="300" width="600" alt="Card image cap">
                        <i class="far fa-heart 3x" aria-hidden="true"></i>
                    </div>                    
                    <div class="card-body">
                        <p class="card-text">@item.Name</p>
                        <p class="card-text">$ @item.Price</p>
                    </div>
            </div>
                </div>
            }           
        </div>
    </div>
</div>
